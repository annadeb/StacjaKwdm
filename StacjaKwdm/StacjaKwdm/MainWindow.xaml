<Window x:Class="StacjaKwdm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StacjaKwdm"
        mc:Ignorable="d"
        Title="Stacja KWDM" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <GroupBox x:Name="groupBox" Header="Serwer" Grid.Column="0" Grid.Row="0" Margin="10,10,10,10" VerticalAlignment="Stretch">
            <Label x:Name="label" Content="Namiary" HorizontalAlignment="Left" Margin="10,10,10,10" VerticalAlignment="Top"/>
        </GroupBox>
        <ListView x:Name="listBox"  Grid.Column="0" Grid.Row="1" Margin="10,10,10,10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
        <ListView x:Name="listBox2" Grid.Column="0" Grid.Row="2" Grid.RowSpan="4" Margin="10,10,10,10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
        <Image x:Name="image" Source="https://www.dolina-noteci.pl/data/include/cms/Blog-DN/co_powinien_pi_kot.jpeg" Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,10,100,10" Grid.ColumnSpan="2" Grid.RowSpan="2" VerticalAlignment="Stretch" />
        <Image x:Name="image2" Source="https://www.dolina-noteci.pl/data/include/cms/Blog-DN/co_powinien_pi_kot.jpeg" Grid.Column="2" HorizontalAlignment="Stretch" Margin="100,10,10,10" Grid.ColumnSpan="2" Grid.RowSpan="2" VerticalAlignment="Stretch" />
        <Slider x:Name="slider" Grid.Column="1" HorizontalAlignment="Stretch" Margin="10,0,10,0" Grid.Row="2" Grid.ColumnSpan="3" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Modalności" Grid.Column="1" HorizontalAlignment="Left" Margin="10,20,0,0" Grid.Row="2" VerticalAlignment="Top"/>
        <Label x:Name="label3" Content="Okno 1" Grid.Column="1" HorizontalAlignment="Left" Margin="10,20,0,0" Grid.Row="3" VerticalAlignment="Top"/>
        <Label x:Name="label4" Content="Okno 2" Grid.Column="1" HorizontalAlignment="Right" Margin="10,20,10,0" Grid.Row="3" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBox" Content="T1" Grid.Column="1" HorizontalAlignment="Left" Margin="10,5,0,0" Grid.Row="4" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBox1" Content="T1ce" Grid.Column="1" HorizontalAlignment="Left" Margin="10,25,0,0" Grid.Row="4" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBox2" Content="T2" Grid.Column="1" HorizontalAlignment="Left" Margin="10,5,0,0" Grid.Row="5" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBox12" Content="Flair" Grid.Column="1" HorizontalAlignment="Left" Margin="10,25,0,0" Grid.Row="5" VerticalAlignment="Top"/>

        <CheckBox x:Name="checkBoxb" Content="T1" Grid.Column="1" HorizontalAlignment="Right" Margin="10,5,30,0" Grid.Row="4" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBox1b" Content="T1ce" Grid.Column="1" HorizontalAlignment="Right" Margin="10,25,18,0" Grid.Row="4" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBox2b" Content="T2" Grid.Column="1" HorizontalAlignment="Right" Margin="10,5,30,0" Grid.Row="5" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBox12b" Content="Flair" Grid.Column="1" HorizontalAlignment="Right" Margin="10,25,21,0" Grid.Row="5" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="Segmentuj automatycznie" Grid.Column="2" HorizontalAlignment="Stretch" Margin="10,10,10,10" Grid.Row="3" VerticalAlignment="Stretch"/>
        <Button x:Name="button2" Content="Wczytaj maski" Grid.Column="3" HorizontalAlignment="Stretch" Margin="10,10,10,10" Grid.Row="3" VerticalAlignment="Stretch"/>
        <TextBlock x:Name="tbOpis" Grid.Column="2" HorizontalAlignment="Stretch" Grid.Row="4" TextWrapping="Wrap" Margin="10,10,10,10"  Text="Opis" VerticalAlignment="Stretch"/>
        <Button x:Name="button3" Content="Zapisz maski" Grid.Column="2" HorizontalAlignment="Stretch" Margin="10,10,10,10" Grid.Row="5" VerticalAlignment="Stretch"/>
        <Label x:Name="label2" Content="Statystyki" Grid.Column="3" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="4" VerticalAlignment="Top"/>

        <Label x:Name="label2a" Content="Objętość guza" Grid.Column="3" HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="5" VerticalAlignment="Top"/>
        <Label x:Name="label2b" Content="Dice" Grid.Column="3" HorizontalAlignment="Left" Margin="10,10,0,0" Grid.Row="5" VerticalAlignment="Bottom"/>

        <Label x:Name="label2aa" Content="25" Grid.Column="3" HorizontalAlignment="Right" Margin="10,0,0,0" Grid.Row="5" VerticalAlignment="Top"/>
        <Label x:Name="label2bb" Content="0,7" Grid.Column="3" HorizontalAlignment="Right" Margin="10,10,0,0" Grid.Row="5" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
